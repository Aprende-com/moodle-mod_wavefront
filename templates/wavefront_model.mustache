{{!
    @template mod_wavefront/model

    Login page template

    Example context (json):
    {
    	"hascaption": true,
    	"caption": "A Greek vase.",
    	"captiontop": true,									If shown, a caption is typically written beneath the model.
    	"pixloading": ".../pix/i/loading.png",				URL generated by call to $renderer->image_url('i/loading').
    	"baseurl":
    	"mtlfile":
    	"objfile":
    	"stagename":
    	"stagewidth":
    	"stageheight":
    	"backcol":
    	"cameraangle":
    	"camerafar":
    	"camerax":
    	"cameray":
    	"cameraz":
    }
}}

<div class="wavefront-model-container">
	<div class="wavefront-model-wrapper">
    	<div class="wavefront-model-frame">
            {{#hascaption}}
            	{{#captiontop}}
            	<div class="wavefront-model-caption top">{{{caption}}}</div>
            	{{/captiontop}}
            {{/hascaption}}
        	<div data-baseurl={{baseurl}} data-mtl={{mtlfile}} data-obj={{objfile}} id="{{stagename}}"
             	 data-stagewidth={{stagewidth}} data-stageheight={{stageheight}} data-backcol={{backcol}} data-cameraangle={{cameraangle}}
            	 data-camerafar={{camerafar}} data-camerax={{camerax}} data-cameray={{cameray}} data-cameraz={{cameraz}}></div>
            
            <img class"model-loading" src="{{pixloading}}" />
             
            {{#hascaption}}
            	{{^captiontop}}
            	<div class="wavefront-model-caption top">{{{caption}}}</div>
            	{{/captiontop}}
            {{/hascaption}}
        	
        </div>
    </div>
 </div>